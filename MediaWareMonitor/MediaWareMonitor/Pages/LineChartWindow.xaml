<Page x:Class="MediaWareMonitor.Pages.LineChartWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MediaWareMonitor.Pages"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="270" d:DesignWidth="398"
      Title="LineChartWindow">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="120*"/>
        </Grid.RowDefinitions>

        <Viewbox Grid.Column="0" Grid.Row="0" Margin="60,20,60,20">
            <TextBlock Name="txtCpuCounts" Text="{Binding HardwareInfo}" Foreground="#FF1D89C7" FontFamily="Segoe UI Light"/>
        </Viewbox>
        
        <lvc:CartesianChart Name="data_Chart" Series="{Binding Chartvalues}" Margin="15,5,15,15" DataTooltip="{x:Null}" DisableAnimations="True" Hoverable="False" Grid.Column="0" Grid.Row="1" >
            <lvc:CartesianChart.AxisX>
                <lvc:Axis MinValue="0"  MaxValue="4" ></lvc:Axis>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY >
                <lvc:Axis MinValue="0"   MaxValue="{Binding MaxValue}" ></lvc:Axis>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
    </Grid>
</Page>
